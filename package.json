{
  "name": "fiscal-sunset",
  "productName": "FiscalSunset",
  "description": "Tax-efficient withdrawal strategist for retirement planning",
  "author": "FiscalSunset Team",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "serve -s dist -l $PORT",
    "build:web": "vite build --mode web",
    "electron": "vite",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@radix-ui/react-tooltip": "^1.2.8",
    "dexie": "^4.2.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.fiscalsunset.app",
    "productName": "FiscalSunset",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}
